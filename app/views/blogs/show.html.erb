<div class="blog-post text-center">
<h1><%= @blog.title %></h1>
<p>
	<%= @blog.content %>
	<div class="article-meta-details">
		<small>Created by: <%= @blog.user.name if @blog.user %>,
		<%= time_ago_in_words(@blog.created_at) %> ago,
		last updated: <%= time_ago_in_words(@blog.updated_at) %> ago</small>
	</div>
</p>

<% if session[:user_id] %>
<ul class="blog-edit">
  <li><%= link_to "Edit", edit_blog_path(@blog), class: "btn btn-info"%></li>
  <li><%= link_to "Destroy",blog_path(@blog),
                  method: :delete,
                  data: { confirm: "Are you sure?" }, class: "btn btn-danger"%></li>
</ul>
<% end %>
</div>


